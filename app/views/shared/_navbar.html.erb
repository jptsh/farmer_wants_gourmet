<div class="navbar navbar-custom navbar-expand-lg navbar-light" >


  <%= link_to "FARMSUP", root_path, class: "navbar-brand" %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">

        <div class="left-nav">
          <li class="nav-item active">
            <%= link_to "Boxes", boxes_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Farmers", "#", class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "About", "#", class: "nav-link" %>
          </li>
        </div>

        <div class="middle-nav">
          <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2 search-custom" name="query" type="search" placeholder="Search" aria-label="Search" value="<%= params[:query] %>">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
          </form>
        </div>

        <div class="right-nav">
        <% if user_signed_in? %>
            <li class="nav-item dropdown">
              <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%= link_to "Profile n shit", "#", class: "dropdown-item" %>
                <%= link_to "Profile n other shit", "#", class: "dropdown-item" %>
                <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
              </div>
            </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Register", new_registration_path(:user), class: "ml-3 nav-link" %>
          </li>
        <% end %>
        </div>
    </ul>
  </div>
</div>
