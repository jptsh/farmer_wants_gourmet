<div class="container justify-content-center">
  <div class="row">
    <div class="col-md-8">
    <div class="signup">
      <h1>Hello  <%= @user.first_name %> <%= @user.last_name %> please create a new Box</h1>

      <%= simple_form_for ([@box]) do |f| %>
      <div class="form-inputs justify-content-center">
        <%= f.input :name %>
        <%= f.input :weight %>
        <%= f.input :size %>
        <%= f.input :price %>
        <%= f.input :content %>
        <%= f.input :address %> 
        <%= f.input :photos, as: :file, input_html: { multiple: true } %>            
        <%= f.button :submit, class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>
