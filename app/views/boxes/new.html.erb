<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Hello  <%= @user.email %> please create a new Box</h1>

      <%= simple_form_for @box do |f| %>
        <%= f.input :name %>
        <%= f.input :weight %>
        <%= f.input :size %>
        <%= f.input :price %>
        <%= f.input :content %>
        <%= f.input :address %>             
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>