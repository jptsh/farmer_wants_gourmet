<div class="container mt-5">
  <div class="row justify-content-center">
    <h1>Create a new order</h1>
    <div class="col-sm-8">
        <%= simple_form_for [@order, @box] do |f| %>
          <%= f.input :total_price %>
          <%= f.submit "Order this", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
